---
import Header from "@components/Header/index.astro";
const { title } = Astro.props;
import {list} from '@vercel/blob';

const assets = await list({
  prefix: 'balzbalz/images/',
  token: import.meta.env.MICROSITE_FRA_READ_WRITE_TOKEN,
});

const bgs = assets.blobs
  .filter(image => image.pathname.startsWith('balzbalz/images/bg'))
  .map(image => {
    const fileName = image.pathname.split('/').pop() || '';
    let media = null;
    
    if (fileName.includes('bg-full')) {
      media = '(min-width: 1280px)';
    } else if (fileName.includes('bg-medium')) {
      media = '(min-width: 768px)';
    }
    // bg-small gets no media query (default)
    
    return {
      url: image.url,
      name: image.pathname,
      fileName,
      media,
      isWebp: fileName.endsWith('.webp'),
      isFallback: fileName.includes('fallback'),
    };
  });

const fallbackImage = bgs.find(bg => bg.isFallback) || bgs[0];
const webpImages = bgs.filter(bg => bg.isWebp);

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" href="/icon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" /><!-- 180×180 -->
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="viewport" content="initial-scale=1.0, width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Balz und Balz - Café und feine Kost in Hamburg Hoheluft."
    />
    <title>{title} | Balz und Balz</title>
  </head>
  <body class="grid font-sans text-white 2xl:overflow-y-auto">
    <picture class="col-[1/1] row-[1/1] w-full h-full fixed -z-10">
      {webpImages.map(bg => 
        bg.media ? (
          <source type="image/webp" srcset={bg.url} media={bg.media} />
        ) : (
          <source type="image/webp" srcset={bg.url} />
        )
      )}
      <img
        class="bg h-full md:h-screen object-cover w-screen"
        src={fallbackImage.url}
        alt="Background"
      />
    </picture>

    <div class="col-[1/1] row-[1/1]">
      <div class="grid grid-columns-rootgrid grid-cols-root gap-4">
        <header class="col-span-full grid grid-cols-subgrid">
          <Header />
        </header>
        <main class="col-span-full grid grid-cols-subgrid pt-28 pb-28">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
